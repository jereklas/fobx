{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",

    /* Modules */
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.*"]
}
